<script>
    window.onscroll = function () {
        let totalheight = document.body.scrollHeight - window.innerHeight;

        let progressheight = (window.pageYOffset / totalheight) * 100;

        if (progressheight > 25) {
            document.getElementsByClassName("search_div")[0].classList.add("Navfixed")
            document.getElementById("gotoTop").style.display = "flex";

        }
        else {
            document.getElementsByClassName("search_div")[0].classList.remove("Navfixed")
            document.getElementById("gotoTop").style.display = "none";
        }
        //console.log(progressheight);
        // progress.style.height = progressheight + "%"
        // console.log(progress.style.height = progressheight + H +`%`);
        // console.log(progressheight + `%`);
    }
</script>